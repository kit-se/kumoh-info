{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
  },
  parserOptions: {
    ecmaFeatures: {
      jsx: true,
      "modules": true,
    },
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-boolean-value": 0,
    "no-use-before-define": ["error", { "functions": true, "classes": true }],
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],

  }
}
